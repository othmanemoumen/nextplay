document.addEventListener('DOMContentLoaded', function() {
  const title = document.querySelector('.section-title');
  const text = title.textContent.trim(); // Handle leading/trailing spaces
  let html = '';
  
  for (let i = 0; i < text.length; i++) {
    const char = text[i] === ' ' ? '&nbsp;' : text[i]; // Preserve spaces
    html += `<span style="animation-delay: ${i * 0.05}s">${char}</span>`;
  }
  
  title.innerHTML = html;
});
